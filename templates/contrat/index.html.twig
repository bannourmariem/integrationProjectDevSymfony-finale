{% extends 'base.html.twig' %}

{% block title %}Contrat index
{% endblock %}

{% block body %}
<h1>Tous Les Contrats</h1>
<div class="card">
    <table class="table ">

        <thead>
            <tr>
                <th class="text-center">Client</th>

                <th class="text-center">Couverture</th>
                <th class="text-center">Prix</th>
                <th class="text-center">De</th>
                <th class="text-center">Jusqu'à</th>

     
                <th class="text-center">Consulter</th>

 
                <th class="text-center"></th>
            </tr>
        </thead>
        <tbody>
            <div class="mobile-search waves-effect waves-light m-3">
                <div class="header-search">
                    <div class="main-search morphsearch-search">
                        <div class="row">
                            <div class="input-group col-5">
                                <form method="get">
                                    <input type="text" name="search" class="form-control"
                                        placeholder="Vous cherche quelqu'un?">

 
                                    <button class="btn btn-primary" type="submit"><svg
                                            xmlns="http://www.w3.org/2000/svg" width="16" height="16"
                                            fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                             <path
                                                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                                        </svg>
                                    </button>
                                </form>
                            </div>

                        </div>

                    </div>
                </div>
            </div>


            {% for contrat in contrats %}
            <tr class=" ">
                <td class="text-center">{{ contrat.client }}</td>
                 <td class="text-center">{{ contrat.couverture }}</td>
                <td class="text-center">{{ contrat.prix }}
                    TND</td>
                <td class="text-center">{{ contrat.debut ? contrat.debut|date('Y-m-d') : '' }}</td>
                <td class="text-center">{{ contrat.fin ? contrat.fin|date('Y-m-d') : '- - -' }}</td>
            

 
                <td class="text-center">
                    <a class="class=btn btn-mat waves-effect waves-light btn-inverse pr-3 pl-3"
                        style="border-radius: 15px;color:rgb(143, 144, 153);" href="/contrat/{{contrat.id}}">
                        <i style="color: rgb(221, 221, 221);" class="ti-eye"></i>
                    </a>

                </td>
                

            </tr>
            </td>

        </tbody>
        </tr>
        {% else %}
        <tr>
            <td class="text-center table-danger" colspan="10">Aucun contrat trouvé pour votre recherche</td>
        </tr>
        {% endfor %}

        </tbody>
    </table>
 </div>
 
 
 <a class="btn btn-primary" href="/contrat/new">ajouter contrat</a>

 {% endblock %}
 
